#include <stdio.h>

void f(int i)
{
  printf("`f' called\n");
  while (--i >= 0)
    int i;
  printf("i = %d\n", i);
}

void g(int i)
{
  printf("`g' called\n");
  while (--i >= 0) {
    int i;
    i = 1;
    printf("i = %d\n", i);
  }
  printf("i = %d\n", i);
}

int main()
{
  f(3);
  g(4);
  return 0;
}
